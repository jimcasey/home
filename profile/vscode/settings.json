// Place your settings in this file to overwrite the default settings
{
  "editor.autoClosingBrackets": "never",
  "editor.autoIndent": "none",
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  "emmet.showExpandedAbbreviation": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "merge-conflict.codeLens.enabled": false,
  "window.newWindowDimensions": "inherit",
  "window.openFilesInNewWindow": "off",
  "window.restoreWindows": "all",
  "window.title": "${rootName}",
  "workbench.startupEditor": "newUntitledFile",
  "search.exclude": {
    "**/build-dev/*": true,
    "**/build-prod/*": true,
    "**/dist/*": true,
    "**/*.svg": true
  },
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "prettier.requireConfig": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "window.restoreFullscreen": true,
  "editor.suggestSelection": "first",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeLens": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.renderControlCharacters": false,
  "security.workspace.trust.untrustedFiles": "open",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.pythonPath": "${env:PYTHON_PATH}",
  "python.formatting.autopep8Args": ["--indent-size=2", "--ignore=E302,E305"],
  "python.defaultInterpreterPath": "${env:PYTHON_PATH}",
  "window.autoDetectColorScheme": true,
  "workbench.colorCustomizations": {
    "terminal.background": "#000000",
    "terminal.foreground": "#e0e0e0"
  },
  "workbench.colorTheme": "Default Light+",
  "workbench.panel.defaultLocation": "right",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "java.imports.gradle.wrapper.checksums": [
    {
      "sha256": "60f0677e2da2a43e256fe1e869b5d49a7d419e6aa23aaa7beff10949329f1087",
      "allowed": true
    }
  ],
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true
}
