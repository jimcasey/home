// Place your settings in this file to overwrite the default settings
{
  "editor.autoClosingBrackets": "never",
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  "emmet.showExpandedAbbreviation": "never",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "merge-conflict.codeLens.enabled": false,
  "window.newWindowDimensions": "inherit",
  "window.openFilesInNewWindow": "off",
  "window.restoreWindows": "all",
  "window.title": "${rootName}",
  "workbench.startupEditor": "newUntitledFile",
  "search.exclude": {
    "**/build-dev/*": true,
    "**/build-prod/*": true,
    "**/dist/*": true,
    "**/*.svg": true
  },
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "prettier.requireConfig": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "window.restoreFullscreen": true,
  "editor.suggestSelection": "first",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.renderControlCharacters": false,
  "security.workspace.trust.untrustedFiles": "open",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.pythonPath": "${env:PYTHON_PATH}",
  "python.formatting.autopep8Args": ["--indent-size=2", "--ignore=E302,E305"],
  "python.defaultInterpreterPath": "${env:PYTHON_PATH}",
  "window.autoDetectColorScheme": true,
  "workbench.colorCustomizations": {
    "[Default Light+]": {
      "sideBar.foreground": "#202020",
      "gitDecoration.ignoredResourceForeground": "#202020a1"
    },
    "terminal.background": "#000000",
    "terminal.foreground": "#e0e0e0"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "workbench.fontAliasing": "auto",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "snyk.yesWelcomeNotification": false,
  "git.mergeEditor": true,
  "go.lintOnSave": "file",
  "go.toolsManagement.autoUpdate": true,
  "editor.inlineSuggest.enabled": true,
  "workbench.colorTheme": "Default Light+",
  "[python]": {
    "editor.formatOnType": true
  },
  "npm.scriptHover": false,
  "debug.javascript.codelens.npmScripts": "never",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
